<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MSDNSample"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!--Other settings-->
    <system:String x:Key="firstNote">Phím đầu tiên</system:String>
    <system:String x:Key="lastNote">Phím cuối cùng</system:String>
    <system:String x:Key="pianoHeight">Chiều cao bàn phím, tính bằng % chiều cao màn hình</system:String>
    <system:String x:Key="noteScreenTime">Tốc độ nốt nhạc (không nên nhầm lần với tốc độ phát lại)</system:String>
    <system:String x:Key="sameWidthNotes">Cho phép các nốt nhạc có cùng chiều rộng</system:String>
    <system:String x:Key="save">Lưu</system:String>
    <system:String x:Key="loadSaved">Mở hồ sơ đã lưu</system:String>
    <system:String x:Key="setDefaults">Đặt lại về mặc định</system:String>

    <system:String x:Key="middleCSquare">Ô vuông ở phím Đô</system:String>
    <system:String x:Key="blackNotesAbove">Kết xuất đầy đủ các nốt nhạc (làm quá trình kết xuất chậm hơn)</system:String>
    <system:String x:Key="topColor">Màu của thanh ngang trên bàn phím</system:String>
    <system:String x:Key="colorRed">Đỏ</system:String>
    <system:String x:Key="colorGreen">Lục</system:String>
    <system:String x:Key="colorBlue">Xanh dương</system:String>

    <system:String x:Key="borderWidth">Chiều ngang của viền</system:String> <!--NEW-->
</ResourceDictionary>
