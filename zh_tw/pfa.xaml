<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MSDNSample"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!--Palette picker-->
    <system:String x:Key="palettes_reload">重新讀取</system:String>
    <system:String x:Key="palettes_imageNote">圖片至少需要16(或32位元)像素寬png檔案, 和任何高度.支援透明.</system:String>
	<system:String x:Key="palettes_randomise">隨機顏色順序</system:String>

    <!--Other settings-->
    <system:String x:Key="firstNote">第一個音符</system:String>
    <system:String x:Key="lastNote">最後一個音符</system:String>
    <system:String x:Key="pianoHeight">鋼琴高度 %</system:String>
    <system:String x:Key="noteScreenTime">音符螢幕時間</system:String>
    <system:String x:Key="sameWidthNotes">相同音符寬度</system:String>
    <system:String x:Key="save">儲存</system:String>
    <system:String x:Key="loadSaved">載入已儲存</system:String>
    <system:String x:Key="setDefaults">預設</system:String>

    <system:String x:Key="middleCSquare">中間C正方形方塊</system:String>
    <system:String x:Key="blackNotesAbove">上面畫黑色音符 (警告: 很慢!!)</system:String>
    <system:String x:Key="topColor">頂部顏色</system:String>
    <system:String x:Key="colorRed">紅</system:String>
    <system:String x:Key="colorGreen">綠</system:String>
    <system:String x:Key="colorBlue">藍</system:String>
	
	<system:String x:Key="borderWidth">邊框寬度</system:String> <!--NEW-->
</ResourceDictionary>